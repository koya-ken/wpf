<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    >

    <!-- Fonts -->
    <!--
    
    -->
    <FontFamily x:Key="NotoSansJPBold">pack://application:,,,/Assets/Fonts/NotoSansJP-Bold.ttf#Noto Sans JP Bold</FontFamily>
    <FontFamily x:Key="NotoSansJPRegular">pack://application:,,,/Assets/Fonts/NotoSansJP-Regular.ttf#Noto Sans JP Regular</FontFamily>
    <!--
    -->
    <!-- Alias -->
    <FontFamily x:Key="FZP">pack://application:,,,/Assets/Fonts/FZPahyamarukana.otf#FZPahyamarukana</FontFamily>
    <system:Double x:Key="FontSize">13</system:Double>
    <system:Double x:Key="FontSize2">33</system:Double>
    <!-- なんかうまくいかない -->
    <!--    
    <StaticResource x:Key="DefaultFont" ResourceKey="NotoSansJPBold" />
    <StaticResource x:Key="DefaultFontSize" ResourceKey="FontSize" />
    -->

    <!-- Default Style -->
    <Style x:Name="DefaultWindowStyle" TargetType="Window">
        <Setter Property="Icon" Value="/Assets/Icon/app.ico"/>
    </Style>

    <!-- 全てのTextBlockにカスタムフォントを適用 -->
    <!--

    
    -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ResourceKey=NotoSansJPBold}" />
    </Style>
    <Style TargetType="Button">
        <Setter Property="FontSize" Value="{StaticResource ResourceKey=FontSize2}" />
    </Style>

</ResourceDictionary
>